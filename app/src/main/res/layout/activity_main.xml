<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        tools:context="com.sqlitedemo.bel.sqlite_demo.MainActivity">

        <EditText
                android:id="@+id/name_id"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Name"
                android:textColorHint="#000000"
                android:layout_marginBottom="7dp"
        />
    <EditText
            android:id="@+id/age_id"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Age"
            android:textColorHint="#000000"
            android:layout_marginBottom="7dp"
    />
    <EditText
            android:id="@+id/gender_id"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Gender"
            android:textColorHint="#000000"
            android:layout_marginBottom="7dp"
    />
    <EditText
            android:id="@+id/uid_id"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="ID"
            android:textColorHint="#000000"
            android:layout_marginBottom="7dp"
    />
    <Button
            android:id="@+id/add_btn_id"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="ADD DATA"
            android:background="#f1ff0000"
            android:textStyle="bold|normal"
            android:textSize="17sp"
            android:layout_marginBottom="3dp"
    />
    <Button
            android:id="@+id/show_btn_id"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="SHOW DATA"
            android:background="#f100ff0d"
            android:textStyle="bold|normal"
            android:textSize="17sp"
            android:layout_marginBottom="3dp"
    />
    <Button
            android:id="@+id/update_btn_id"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="UPDATE DATA"
            android:background="#f10090ff"
            android:textStyle="bold|normal"
            android:textSize="17sp"
            android:layout_marginBottom="3dp"
    />
    <Button
            android:id="@+id/delete_btn_id"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="DELETE DATA"
            android:background="#ff6a00"
            android:textStyle="bold|normal"
            android:textSize="17sp"
    />
</LinearLayout>
